{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <div class="form">
      <h1 class="form-title">Створити користувача</h1>
      <form method="post" action="/user-create">
        <div class="form-content">
          <div class="form-content-field">
            <label for="email" class="form-label">Email адреса:</label>
            <input type="email" class="form-input" name="email">
          </div>
          <div class="form-content-field">
            <label for="login" class="form-label">Логин:</label>
            <input type="login" class="form-input" name="login">
          </div>
          <div class="form-content-field">
            <label for="password" class="form-label">Пароль:</label>
            <input type="password" class="form-input" name="password">
          </div>
          <button class="form-button">Створити</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form-title">Список користувачів</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>Список користувачів порожній</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li> {{login}} || {{email}} || {{id}} <a href="/user-delete?id={{id}}">(видалити)</a></li>
          {{/each}}
        </ul>

        {{/if}}

        {{/with}}
      </div>

    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form-title">Оновити пошту користувача</h1>
      <form method="post" action="/user-update">
        <div class="form-content">
          <div class="form-content-field">
            <label for="id" class="form-label">ID:</label>
            <input type="id" class="form-input" name="id">
          </div>

          <div class="form-content-field">
            <label for="email" class="form-label"> Нова email адреса:</label>
            <input type="email" class="form-input" name="email">
          </div>

          <div class="form-content-field">
            <label for="password" class="form-label">Пароль:</label>
            <input type="password" class="form-input" name="password">
          </div>
          <button class="form-button">Оновити</button>
        </div>
      </form>
    </div>
  </section>
</main>


